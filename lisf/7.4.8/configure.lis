FC              = gfortran
FC77            = gfortran
LD              = gfortran
CC              = gcc
AR              = ar
MOD_ESMF        = /opt/esmf/mod/modO/Linux.gfortran.64.mpiuni.default
LIB_ESMF        = /opt/esmf/lib/libO/Linux.gfortran.64.mpiuni.default
INC_JPEG2000      = /usr/include/
LIB_JPEG2000      = /usr/lib/x86_64-linux-gnu/
INC_ECCODES     = /usr/lib/x86_64-linux-gnu/fortran/gfortran-mod-15/
LIB_ECCODES     = /usr/lib/x86_64-linux-gnu/
INC_NETCDF      = /usr/include/
LIB_NETCDF      = /usr/lib/x86_64-linux-gnu/
INC_HDF4        = 
LIB_HDF4        = 
INC_HDF5        = 
LIB_HDF5        = 
INC_HDFEOS      = 
LIB_HDFEOS      = 
LIB_MINPACK     = 
INC_CRTM        = 
LIB_CRTM        = 
INC_PROF_UTIL   = 
LIB_PROF_UTIL   = 
INC_CMEM        = 
LIB_CMEM        = 
LIB_LAPACK      = 
CFLAGS          = -c  -DGFORTRAN -DLINUX -DLIS_JULES
FFLAGS77        = -c -O2 -fbacktrace  -fconvert=big-endian -DHIDE_SHR_MSG -DNO_SHR_VMATH -DGFORTRAN -DLINUX -DHIDE_MPI -I$(MOD_ESMF) -I$(INC_ECCODES) -I$(INC_NETCDF) -DLIS_JULES
FFLAGS          = -c -ffree-line-length-0 -O2 -fbacktrace  -fconvert=big-endian -DHIDE_SHR_MSG -DNO_SHR_VMATH -DGFORTRAN -DLINUX -DHIDE_MPI -I$(MOD_ESMF) -I$(INC_ECCODES) -I$(INC_NETCDF) -DLIS_JULES
LDFLAGS         =  -L$(LIB_ESMF) -lesmf -lstdc++ -lz -L$(LIB_ECCODES) -leccodes_f90 -leccodes -L$(LIB_JPEG2000) -lopenjp2 -L$(LIB_NETCDF) -lnetcdff -lnetcdf -lz -lrt
